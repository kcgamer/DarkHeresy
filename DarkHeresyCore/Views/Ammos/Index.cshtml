@model IEnumerable<DarkHeresyCore.Models.Ammo>

@{
    ViewData["Title"] = "Ammo";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@section styles
{
    <link rel="stylesheet" type="text/css" href ="https://cdn.datatables.net/v/dt/dt-1.10.15/datatables.min.css"/>
}


<div class="row">
    <div class="col-md-12">
        <div class="panel panel-primary">
            <div class="panel-heading">
                <h3 class="panel-title">Ammo</h3>
            </div>
            <div class="panel-body">
                <table id="table" class="table table-striped table-bordered table-hover table-responsive" >
                    <thead>
                    <tr>
                        <th>@Html.DisplayNameFor(model => model.Name)</th>
                        <th>@Html.DisplayNameFor(model => model.Cost)</th>
                        <th>@Html.DisplayNameFor(model => model.Amount)</th>
                        <th>@Html.DisplayNameFor(model => model.Availability)</th>
                        <th>@Html.DisplayNameFor(model => model.Source)</th>
                    </tr>
                    </thead>
                </table>
            </div>
        </div>
    </div>
</div>

@section scripts {
    <script type="text/javascript" src="https://cdn.datatables.net/v/dt/dt-1.10.15/datatables.min.js"></script>
    <script>
        $(document).ready(function() {
            var table = $("#table").DataTable({
                "ajax": {
                    "url": "/api/Ammos",
                    dataSrc: ""
                },
                "columns": [
                    {
                        "data": "name",
                        "render": function (data, type, ammo) {
                            return "<a href='/Ammos/Details/" + ammo.id + "'>" + ammo.name + "</a>";
                        }
                    },
                    { "data": "cost" },
                    { "data": "amount" },
                    { "data": "availability.name" },
                    { "data": "source" }
                ]
            });
        });

    </script>
}


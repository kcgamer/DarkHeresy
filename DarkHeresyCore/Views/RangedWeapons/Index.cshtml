@model IEnumerable<DarkHeresy.Models.RangedWeapon>

@{
    ViewData["Title"] = "Ranged";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@section styles
{
    <link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/v/dt/dt-1.10.15/datatables.min.css" />
}


<div class="row">
    <div class="col-md-12">
        <div class="panel panel-primary">
            <div class="panel-heading">
                <h3 class="panel-title">Ranged Weapons</h3>
            </div>
            <div class="panel-body">
                <table id="table" class="table table-striped table-bordered table-hover table-responsive">
                    <thead>
                    <tr>
                        <th>@Html.DisplayNameFor(model => model.Name)</th>
                        <th>@Html.DisplayNameFor(model => model.Class)</th>
                        <th>@Html.DisplayNameFor(model => model.Range)</th>
                        <th>@Html.DisplayNameFor(model => model.RoF)</th>
                        <th>@Html.DisplayNameFor(model => model.Damage)</th>
                        <th>@Html.DisplayNameFor(model => model.Pen)</th>
                        <th>@Html.DisplayNameFor(model => model.Clip)</th>
                        <th>@Html.DisplayNameFor(model => model.Reload)</th>
                        <th>@Html.DisplayNameFor(model => model.Special)</th>
                        <th>@Html.DisplayNameFor(model => model.Weight)</th>
                        <th>@Html.DisplayNameFor(model => model.Cost)</th>
                        <th>@Html.DisplayNameFor(model => model.Availability)</th>
                        <th>@Html.DisplayNameFor(model => model.Category)</th>
                        <th>@Html.DisplayNameFor(model => model.Source)</th>
                    </tr>
                    </thead>
                </table>
            </div>
        </div>
    </div>
</div>

@section scripts {
    <script type="text/javascript" src="https://cdn.datatables.net/v/dt/dt-1.10.15/datatables.min.js"></script>
    <script>
        $(document).ready(function() {
            var table = $("#table").DataTable({
                "ajax": {
                    "url": "/api/RangedWeapon",
                    dataSrc: ""
                },
                "columns": [
                    {
                        "data": "name",
                        "render": function (data, type, ranged) {
                            return "<a href='/RangedWeapons/Details/" + ranged.id + "'>" + ranged.name + "</a>";
                        }
                    },
                    { "data": "class.name" },
                    { "data": "range" },
                    { "data": "roF" },
                    { "data": "damage" },
                    { "data": "pen" },
                    { "data": "clip" },
                    { "data": "reload" },
                    { "data": "special" },
                    { "data": "weight" },
                    { "data": "cost" },
                    { "data": "availability.name" },
                    { "data": "category.name" },
                    { "data": "source" }
                ]
            });
        });

    </script>
}

